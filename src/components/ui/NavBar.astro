<style>
  .navbar-circle {
    border-radius: 50%;
    position: fixed;
    cursor: pointer;
    box-shadow: 0 0 40px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    transition: all 0.5s;
    overflow: hidden;
  }
  .navbar-open .navbar-svg {
    opacity: 0;
  }
  .navbar-closed {
    width: 150px;
    height: 150px;
    top: -75px;
    right: -75px;
  }
  .navbar-svg {
    position: absolute;
    left: 30px;
    bottom: 30px;
  }
  .navbar-open {
    width: 100vw;
    height: 100vh;
    top: 0;
    right: 0;
    border-radius: 0;
    align-items: center;
    justify-content: center;
    background: var(--color-bright-peach);
  }
  .navbar-menu {
    opacity: 0;
    pointer-events: none;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: opacity 0.4s;
    z-index: 1;
  }
  .navbar-open .navbar-menu {
    opacity: 1;
    pointer-events: auto;
  }
  .navbar-menu ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
  }
  .navbar-menu li {
    font-size: 2rem;
    color: #fff;
    margin: 1.5rem 0;
    cursor: pointer;
    transition: color 0.2s;
  }
  .navbar-menu li:hover {
    color: #000;
  }
</style>

<script>
  const header = document.getElementById('navbar-header');
  const toggle = document.getElementById('navbar-toggle');
  if (header && toggle) {
    header.addEventListener('click', function (e) {
      e.stopPropagation();
      header.classList.toggle('navbar-open');
      header.classList.toggle('navbar-closed');
